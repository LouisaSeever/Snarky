<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.louisaseever.snarky" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ManageCommentsActivity"
            android:label="@string/title_activity_manage_comments" >
        </activity>
        <activity
            android:name=".AddNewCommentActivity"
            android:label="@string/title_activity_add_new_comment" >
        </activity>
    </application>

</manifest>
